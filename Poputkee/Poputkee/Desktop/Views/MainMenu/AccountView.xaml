<UserControl x:Class="Poputkee.Desktop.Views.MainMenu.AccountView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Poputkee.Desktop.Views.MainMenu"
              xmlns:mainmenu="clr-namespace:Poputkee.Desktop.ViewModels.MainMenu"
              d:DataContext="{d:DesignInstance Type=mainmenu:AccountViewModel}"
              mc:Ignorable="d"
        Height="450" Width="800">

    <StackPanel Margin="20">

        <TextBlock Text="{Binding CurrentAccount.Name}" FontSize="18"/>
        <TextBlock Text="{Binding CurrentAccount.Email}"/>
        <TextBlock Text="{Binding CurrentAccount.BirthDate, StringFormat='Дата рождения: {0:dd.MM.yyyy}'}"/>
        <TextBlock Text="{Binding CurrentAccount.Bio}" TextWrapping="Wrap"/>

        <Button Content="Edit Profile" 
                Command="{Binding EditCommand}"
                Margin="0,20"/>
    </StackPanel>
</UserControl>
