<UserControl>
    <ListView ItemsSource="{Binding Trips}">
        <ListView.View>
            <GridView>
                <GridViewColumn Header="Водитель" 
                                DisplayMemberBinding="{Binding DriverName}"/>
                <GridViewColumn Header="Откуда" 
                                DisplayMemberBinding="{Binding FromCity}"/>
                <GridViewColumn Header="Куда" 
                                DisplayMemberBinding="{Binding ToCity}"/>
                <GridViewColumn Header="Дата" 
                                DisplayMemberBinding="{Binding DepartureTime}"/>
                <GridViewColumn Header="Места" 
                                DisplayMemberBinding="{Binding AvailableSeats}"/>
            </GridView>
        </ListView.View>
    </ListView>
</UserControl>