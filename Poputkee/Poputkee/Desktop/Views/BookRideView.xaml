<UserControl x:Class="Poputkee.Desktop.Views.BookRideView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:vm="clr-namespace:Poputkee.Desktop.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" 
             d:DesignWidth="800">

    <UserControl.Effect>
        <DropShadowEffect Color="Gray" BlurRadius="15" Direction="290" Opacity="0.7"/>
    </UserControl.Effect>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель поиска -->
        <StackPanel Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Поиск поездки" 
                       FontSize="20"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBox Tag="Откуда" 
                     Text="{Binding From, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource InputFieldStyle}"/>

            <TextBox Tag="Куда" 
                     Text="{Binding To, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource InputFieldStyle}"
                     Margin="0,10,0,0"/>

            <DatePicker SelectedDate="{Binding SelectedDate}"
                        Margin="0,10,0,0"
                        Style="{StaticResource DatePickerStyle}"/>

            <Button Content="Найти поездки"
                    Command="{Binding FindRidesCommand}"
                    Margin="0,20,0,0"
                    Style="{StaticResource PrimaryButtonStyle}"/>
        </StackPanel>

        <!-- Список найденных поездок -->
        <ListView Grid.Row="1" 
                  ItemsSource="{Binding FoundTrips}"
                  Margin="0,20,0,0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Margin" Value="0,5"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="Background" Value="#FAFAFA"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Информация о поездке -->
                            <StackPanel>
                                <TextBlock Text="{Binding DriverName}" 
                                           FontWeight="Bold"
                                           FontSize="14"/>

                                <TextBlock Margin="0,5,0,0">
                                    <Run Text="{Binding FromCity}"/>
                                    <Run Text="→"/>
                                    <Run Text="{Binding ToCity}"/>
                                </TextBlock>

                                <TextBlock Text="{Binding DepartureTime, StringFormat='dd.MM.yyyy HH:mm'}"
                                           Margin="0,5,0,0"/>

                                <TextBlock Text="{Binding AvailableSeats, StringFormat='Свободных мест: {0}'}"
                                           Margin="0,5,0,0"/>
                            </StackPanel>

                            <!-- Кнопка бронирования -->
                            <Button Grid.Column="1" 
                                    Content="Забронировать"
                                    Command="{Binding DataContext.BookRideCommand, 
                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Width="120"
                                    VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>