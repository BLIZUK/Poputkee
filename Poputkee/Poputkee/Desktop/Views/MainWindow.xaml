<Window x:Class="Poputkee.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Poputkee" Height="600" Width="800">
    <Grid>
        <!-- Основной контент -->
        <ContentControl Content="{Binding CurrentView}" 
                        Grid.Row="0"
                        Margin="10"/>

        <!-- Панель навигации (4 кнопки внизу) -->
        <Border Grid.Row="1" 
                Background="#F0F0F0" 
                Padding="10">
            <UniformGrid Rows="1" Columns="4">
                <Button Content="Бронировать" 
                        Command="{Binding ShowBookRideCommand}"
                        Style="{StaticResource NavButtonStyle}"/>
                <Button Content="Создать поездку" 
                        Command="{Binding ShowCreateRideCommand}"
                        Style="{StaticResource NavButtonStyle}"/>
                <Button Content="Архив" 
                        Command="{Binding ShowArchiveCommand}"
                        Style="{StaticResource NavButtonStyle}"/>
                <Button Content="Аккаунт" 
                        Command="{Binding ShowAccountCommand}"
                        Style="{StaticResource NavButtonStyle}"/>
            </UniformGrid>
        </Border>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    </Grid>
</Window>