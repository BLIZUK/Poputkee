<Window x:Class="Poputkee.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Poputkee" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Кнопка создания поездки -->
        <Button Grid.Row="0" Content="Создать поездку" 
                Command="{Binding CreateTripCommand}" Width="120" Margin="5"/>

        <!-- Список поездок -->
        <ListView Grid.Row="1" ItemsSource="{Binding Trips}" SelectedItem="{Binding SelectedTrip}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Откуда" DisplayMemberBinding="{Binding FromCity}"/>
                    <GridViewColumn Header="Куда" DisplayMemberBinding="{Binding ToCity}"/>
                    <GridViewColumn Header="Время отправления" DisplayMemberBinding="{Binding DepartureTime}"/>
                    <GridViewColumn Header="Свободные места" DisplayMemberBinding="{Binding AvailableSeats}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Кнопка бронирования -->
        <Button Grid.Row="2" Content="Забронировать место" 
                Command="{Binding BookSeatCommand}" Width="120" Margin="5"/>
    </Grid>
</Window>